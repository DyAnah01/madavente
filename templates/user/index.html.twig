{% extends "base.html.twig" %}


{% block title %} {{ parent() }}|Liste Utilisateur {% endblock title %}

{% block body %}
{# {{ dump(user)}} #}
{% for notification in app.flashes('success') %}
<div class="alert alert-success col-md-6 mx-auto text-center disparition mt-4">
  {{ notification }}
</div>
{% endfor %}
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Email</th>
        <th scope="col">Verification</th>
        <th scope="col">Nom</th>
        <th scope="col">Prénom</th>
        <th scope="col">Adresse</th>
        <th scope="col">Cp</th>
        <th scope="col">Tel</th>
        <th scope="col">DateEnregistrement</th>
      </tr>
    </thead>
    <tbody>
      {% for item in user %}
      <tr>
        <th scope="row"> {{ item.id }} </th>
        <td> {{ item.email }} </td>
        <td>
          {% if item.isVerified == 1 %}
          <div title="email vérifié">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
              class="bi bi-check-circle" viewBox="0 0 16 16">
              <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
              <path
                d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
            </svg>
          </div>
          {% else %}
          <div title="email non vérifié">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle"
              viewBox="0 0 16 16">
              <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
              <path
                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
            </svg>
          </div>
          {% endif %}
        </td>
        <td> {{ item.nom }} </td>
        <td> {{ item.prenom }} </td>
        <td> {{ item.adresse }}</td>
        <td> {{ item.cp }} </td>

        <td> +33{{ item.tel }} </td>
        <td> le {{ item.createdAt | date('d/m/Y à H:m:s') }} </td>
      </tr>
      {% endfor %}

    </tbody>

  </table>
</div>


{% endblock body %}