{% extends "base.html.twig" %}

{% block title %} {{ parent() }}|Add_And_Show_Articles{% endblock title %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-5 d-flex">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Ajouter des articles</h2>

                {{ form_start(formArticles) }}
                <div class="col-md-12 mx-auto">
                    {{ form_row(formArticles.titre) }}
                </div>
                <div class="col-md-12 mx-auto">
                    {{ form_row(formArticles.shortDescription) }}
                </div>
                <div class="col-md-12 mx-auto">
                    {{ form_row(formArticles.description) }}
                </div>
                <div class="col-md-12 mx-auto">
                    {{ form_row(formArticles.photo) }}
                </div>
            </div>

            <div class="col-md-6  pt-2">
                <div class="col-md-12 mx-auto">
                    {{ form_row(formArticles.prix) }}
                </div>
                <div class="col-md-12 mx-auto">
                    {{ form_row(formArticles.stock) }}
                </div>

                <div class="col-md-12 mx-auto">
                    {{ form_row(formArticles.idCategorie) }}
                </div>
                <div class="col-md-12 mx-auto">
                    <button class="text-white btn btn-success bg-opacity-75 mil">Ajouter</button>
                </div>
                {{ form_end(formArticles) }}
            </div>
        </div>
    </div>

</div>

{% endblock body %}