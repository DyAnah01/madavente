{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
<h1 class="text-center fs-3 my-5"> Liste de commande</h1>
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        {% if detail %}
        <div class="table-responsive">
            <table class="table table-bordered border border-dark text-center tableau" id="responsive-table">
                <thead>
                    <tr>
                        <th class="bg-dark text-white" scope="col">N° Commande</th>
                        <th class="bg-dark text-white" scope="col">Statut</th>
                        <th class="bg-dark text-white" scope="col">Date Enregistrement</th>
                        <th class="bg-dark text-white" scope="col">Total</th>
                        <th class="bg-dark text-white" scope="col">Actions</th>

                    </tr>
                </thead>
                <tbody>
                    {% for item1 in detail %}
                    {% for item2 in item1.commandeDetails %}
                    <tr>
                        <th scope="row">{{item1.id}} </th>
                        <td> {{item1.statut}} </td>
                        <th> {{item1.createdAt | date('d:m:Y H:i:s') }} </th>
                        <td> {{item1.total}} €</td>
                        <td>
                            {# Commande livré #}
                            <a href="{# {{ path('commande_livré') }} #}" class="text-decoration-none mx-2"
                                title="marqué comme livré">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="black"
                                    class="bi bi-check-square" viewBox="0 0 16 16">
                                    <path
                                        d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    <path
                                        d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z" />
                                </svg>
                            </a>
                            {# Voir le détail #}
                            <a href="{#{{ path('detail_commande_admin')}}#}" class="text-decoration-none mx-2"
                                title="Voir le détail">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="black"
                                    class="bi bi-eye" viewBox="0 0 16 16">
                                    <path
                                        d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                    <path
                                        d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                                </svg>
                            </a>
                        </td>

                    </tr>
                    {% endfor %}
                    {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
    {% else %}
    <p>Aucune commande</p>
    {% endif %}

